{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "sort-imports":"error",
    "sort-keys": "error",
    "sort-vars": "error",
    "sort-requires/sort-requires": "error",
    "immutable/no-let": "error",
    "immutable/no-this": "error",
    "immutable/no-mutation": "error"
  },
  "plugins": [
    "sort-requires",
    "immutable"
  ]
}
